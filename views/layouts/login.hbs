<div
  style="width: 100%;height: 100vh; display: flex; flex-direction: column; justify-content:center; align-items:center; font-size: 2rem;"
>
  <h1
    style="text-align: center; padding-bottom: 2rem; font-size:3rem;"
  >Login</h1>
  {{#if errorMessage}}
    <p style="color: red; font-size: 1.5rem; text-align: center;">{{errorMessage}}</p>
  {{/if}}
  <form
    action="/login"
    method="post"
    style="display: grid; grid-template-columns: repeat(3, minmax(0, 1fr));row-gap: 2rem; column-gap: 2px;"
  >
    <label for="email" style="justify-self: end;">Email: </label>
    <input
      type="email"
      name="email"
      id="email"
      required
      placeholder="email"
      style="font-size: 2rem; grid-column-2"
    />
    <label for="password" style="justify-self: end; grid-column:1;">Password:
    </label>
    <input
      type="password"
      name="password"
      id="password"
      min="8"
      max="32"
      required
      placeholder="password"
      style="font-size: 2rem; grid-column-2"
    />
    <button
      type="submit"
      style="background-color: rgb(66, 172, 66); width: 100%; padding: 1rem; border-radius:1rem; border:none; font-size: 2rem; grid-column: 2;"
    >Login</button>
    <p style="grid-column: 2; text-align: center;">Don't have an account?
      <a href="/signup">Sign up</a></p>
  </form>
</div>